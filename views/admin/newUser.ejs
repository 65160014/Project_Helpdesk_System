<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create User - Helpdesk System</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link rel="stylesheet" href="/css/style_userList.css">
</head>
<body>
    <main>
        <div class="container">
            <div class="sidebar">
                <div>
                    <h1>HELPDESK</h1>
                    <h3>General</h3>
                    <ul>
                      <li><a href="/admin/dashboard"><i class="fas fa-tachometer-alt"></i> Dashboard</a></li>
                      <li><a href="/admin/tickets"><i class="fas fa-ticket-alt"></i> Tickets</a></li>
                      <!-- <li><a href="/admin/search"><i class="fas fa-search"></i> Search</a></li> -->
                    </ul>
                    <hr>
                    <h3>Administration</h3>
                    <ul>
                      <li><a href="/admin/status"><i class="fas fa-tasks"></i> Status</a></li>
                      <li><a href="/admin/queue"><i class="fas fa-user-clock"></i> Queue</a></li>
                      <li class="active"><a href="/admin/userList"><i class="fas fa-users"></i> Users</a></li>
                    </ul>
                </div>
                <div class="profile">
                    <a href="#"><i class="fas fa-user-circle"></i></a>
                </div>
            </div>
            <div class="content">
                <div class="header">
                    <h2>Create User</h2>
                </div>
                    <!-- Display error message if it exists -->
                    <% if (typeof error !== 'undefined') { %>
                        <p class="error-message"><%= error %></p>
                    <% } %>

                    <form action="/admin/createUser" method="POST">
                        <div class="form-group">
                            <label for="username">Username:</label>
                            <input type="text" id="username" name="username" required>
                        </div>

                        <div class="form-group">
                            <label for="email">Email:</label>
                            <input type="email" id="email" name="email" required>
                        </div>

                        <div class="form-group">
                            <label for="password">Password:</label>
                            <input type="password" id="password" name="password" required>
                        </div>

                        <div class="form-group">
                            <label for="confirm_password">Confirm Password:</label>
                            <input type="password" id="confirm_password" name="confirm_password" required>
                        </div>

                        <div class="form-group">
                            <label for="role">Role:</label>
                            <select id="role" name="role" required>
                                <option value="admin">Admin</option>
                                <option value="staff">Staff</option>
                                <option value="user">User</option>
                            </select>
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn">Create User</button>
                        </div>
                    </form>
            </div>
        </div>
    </main>

    <footer>
        <p>&copy; 2024 Helpdesk System</p>
    </footer>
</body>
</html>
