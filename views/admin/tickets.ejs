<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tickets - Helpdesk System</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link rel="stylesheet" href="/css/style_tickets_staff.css">
</head>
<body>
    <div class="container">
        <div class="sidebar">
            <div>
                <h1>HELPDESK</h1>
                <h3>General</h3>
                <ul>
                  <li><a href="/admin/dashboard"><i class="fas fa-tachometer-alt"></i> Dashboard</a></li>
                  <li class="active"><a href="/admin/tickets"><i class="fas fa-ticket-alt"></i> Tickets</a></li>
                  <li><a href="/admin/search"><i class="fas fa-search"></i> Search</a></li>
                </ul>
                <hr>
                <h3>Administration</h3>
                <ul>
                  <li><a href="/admin/status"><i class="fas fa-tasks"></i> Status</a></li>
                  <li><a href="/admin/queue"><i class="fas fa-user-clock"></i> Queue</a></li>
                  <li><a href="/admin/users"><i class="fas fa-users"></i> Users</a></li>
              </ul>
            </div>
            <div class="profile">
                <a href="#"><i class="fas fa-user-circle"></i></a>
            </div>
        </div>
        <div class="content">

            <div class="header">
                <h2>Tickets</h2>
                <div class="filter-sort">
                    <select>
                        <option>All requests</option>
                        <option>Open</option>
                        <option>Pending</option>
                        <option>Resolved</option>
                        <option>Closed</option>
                    </select>
                    <select>
                        <option>All requests</option>
                        <option>Open</option>
                        <option>Pending</option>
                        <option>Resolved</option>
                        <option>Closed</option>
                    </select>
                </div>
            </div>
    
            
    
            <div class="ticket-list">
                <div class="ticket-header">
                    <span>USER</span>
                    <span>SUBJECT</span>
                    <span>QUEUE</span>
                    <span>STATUS</span>
                    <span>UPDATED AT</span>
                </div>
    
                <% if (tickets.length === 0) { %> <!-- ตรวจสอบว่ามีตั๋วหรือไม่ -->
                    <div class="no-tickets">
                        <p>No tickets</p> <!-- เปลี่ยนข้อความที่นี่ -->
                    </div>
                <% } else { %>
                    <% tickets.forEach(ticket => { %>
                        <div class="ticket-item">
                            <a href="#"></a>
                            <a href="#"><span><%= ticket.title %> </span></a>
                            <a href="#"><span></span></a>
                            <a href="#"><%= ticket.status %></a>
                            <a href="#"><%= new Date(ticket.display_updated_at).toLocaleString() %></a>
                        </div>                        
                    <% }); %>
                <% } %>
            </div>
        </div>
</body>
</html>
