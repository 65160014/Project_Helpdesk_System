<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>New Tickets - Helpdesk System</title>
    <link rel="stylesheet" href="/public/style.css">
</head>
<body>
    <header>
        <h1>New Tickets</h1>
        <nav>
            <ul>
                <li><a href="/user/tickets/new">New Tickets</a></li>
                <li><a href="/logout">Logout</a></li>
            </ul>
        </nav>
    </header>

    <main>
        <h2>Assign Tickets</h2>
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Subject</th>
                    <th>Description</th>
                    <th>Assign</th>
                </tr>
            </thead>
            <tbody>
                <% tickets.forEach(ticket => { %>
                <tr>
                    <td><%= ticket.id %></td>
                    <td><%= ticket.subject %></td>
                    <td><%= ticket.description %></td>
                    <td>
                        <form action="/staff/tickets/assign/<%= ticket.id %>" method="POST">
                            <select name="staffId">
                                <% staff.forEach(st => { %>
                                <option value="<%= st.id %>"><%= st.username %></option>
                                <% }) %>
                            </select>
                            <button type="submit" class="btn">Assign</button>
                        </form>
                    </td>
                </tr>
                <% }) %>
            </tbody>
        </table>
    </main>

    <footer>
        <p>&copy; 2024 Helpdesk System</p>
    </footer>
</body>
</html>
